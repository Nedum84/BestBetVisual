<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controllers.MainActivity">
    <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/ggg"
            android:layout_height="90dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg1">

        <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/circ"
                android:layout_centerInParent="true"
        >
            <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/lg1"
                    android:id="@+id/logo"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/lg1"/>
        </LinearLayout>

    </RelativeLayout>

    <TextView
            android:layout_width="140dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="Yesterday"
            app:layout_constraintCircleRadius="12dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="16sp"
            android:id="@+id/textView"
            android:layout_marginTop="52dp"
            android:background="@drawable/circ"
            app:layout_constraintTop_toBottomOf="@+id/ggg"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/ggg"/>

    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="179dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/recyclerView1"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="231dp"
            android:id="@+id/recyclerView2"
            android:scrollbars="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView3"/>

    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="146dp"
            android:id="@+id/recyclerView3"
            android:scrollbars="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
    />
    <TextView
            android:text="Today"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="georgia"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#000"
            android:textColor="#fff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView2" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Tomorrow"
            android:layout_width="0dp"
            android:fontFamily="georgia"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#000"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView3"
            android:layout_marginBottom="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
